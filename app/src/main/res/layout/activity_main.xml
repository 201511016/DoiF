<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/create_butt"
        android:layout_width="118dp"
        android:layout_height="126dp"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="232dp"
        android:layout_marginRight="232dp"
        android:background="@drawable/create_butt_img"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/play_butt"
        android:layout_width="118dp"
        android:layout_height="126dp"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:background="@drawable/play_butt_img"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/edit_butt"
        android:layout_width="118dp"
        android:layout_height="126dp"
        android:layout_marginTop="448dp"
        android:layout_marginEnd="232dp"
        android:layout_marginRight="232dp"
        android:background="@drawable/edit_butt_img"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/settings_butt"
        android:layout_width="118dp"
        android:layout_height="126dp"
        android:layout_marginTop="448dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:background="@drawable/settings_butt_img"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="235dp"
            android:layout_height="360dp"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>